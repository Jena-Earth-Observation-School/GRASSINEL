import sys
import os
import atexit

from grass.script import parser, run_command

def cleanup():
    pass

def main(options, flags):
    run_command("i.sentinel.download",
                settings="/home/user/Desktop/GRASS Jena Workshop/settings.txt",
                output="/home/user/Desktop/GRASS Jena Workshop/geodata/sentinel/Sentinel_Download",
                map="jena_boundary@PERMANENT",
                area_relation="Intersects",
                producttype="GRD",
                start="2020-05-28",
                end="2020-06-01",
                sort="cloudcoverpercentage,ingestiondate,footprint",
                order="asc")

    return 0

if __name__ == "__main__":
    options, flags = parser()
    atexit.register(cleanup)
    sys.exit(main(options, flags))
